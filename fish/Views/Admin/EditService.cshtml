@model fish.Models.Service

@{
    ViewBag.Title = "Chỉnh Sửa Dịch Vụ";
}

<h2>Chỉnh Sửa Dịch Vụ</h2>

<form asp-action="EditService" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="TenDichVu">Tên Dịch Vụ</label>
        <input type="text" id="TenDichVu" name="TenDichVu" class="form-control" value="@Model.TenDichVu" required />
    </div>

    <div class="form-group">
        <label for="MoTaDichVu">Mô Tả Dịch Vụ</label>
        <textarea id="MoTaDichVu" name="MoTaDichVu" class="form-control">@Model.MoTaDichVu</textarea>
    </div>

    <div class="form-group">
        <label for="Gia">Giá</label>
        <input type="number" id="Gia" name="Gia" class="form-control" value="@Model.Gia" required />
    </div>

    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
</form>
